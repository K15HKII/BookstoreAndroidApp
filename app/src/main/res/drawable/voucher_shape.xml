<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <corners
                    android:topLeftRadius="12dp"
                    android:topRightRadius="12dp"
                    android:bottomLeftRadius="12dp"
                    android:bottomRightRadius="12dp" />

            <size
                    android:width="300dp"
                    android:height="100dp" />
            <solid android:color="#F8DAD0" />
        </shape>
    </item>

    <!-- Left Half-Circle -->
    <item
            android:left="-12dp"
            android:right="370dp"
            android:top="48dp"
            android:bottom="48dp">
        <shape android:shape="oval">
            <solid android:color="#BCFEFE" />
        </shape>
    </item>

    <!-- Right Half-Circle -->
    <item
            android:left="370dp"
            android:right="-12dp"
            android:top="48dp"
            android:bottom="48dp">
        <shape android:shape="oval">
            <solid android:color="#BCFEFE" />
        </shape>
    </item>



</layer-list>
