<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.accountscreen.AccountDetailPage">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@drawable/home_background">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_background">
            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:theme="?attr/actionBarTheme"
                    android:minHeight="?attr/actionBarSize"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.0">
            <android.widget.Button
                    android:id="@+id/btnAccountInfoBackward"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:background="@drawable/ic_backward"/>
            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                <ImageButton
                        android:id="@+id/btnAccountInfoAddImage"
                        android:layout_width="164dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:background="@drawable/account_image_view"
                        android:src="@drawable/login_shark_img"/>
                <TextView
                        android:id="@+id/tvAccountInfoUserName"
                        android:fontFamily="@font/lato_bold"
                        android:text="Noth1ng"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"/>
                <LinearLayout
                        android:id="@+id/btnAccountInfoDetailName"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/account_button_1"
                        style="@android:style/Widget.Button"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView
                                android:text="Tên"
                                android:fontFamily="@font/lato_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_alignParentLeft="true"
                                android:textSize="19dp"
                                android:textColor="@color/black"/>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:layout_alignParentEnd="true"
                                      android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tvAccountInfoName"
                            android:fontFamily="@font/lato_regular"
                            android:text="Trần Hữu Trí"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:layout_width="267dp"
                            android:layout_marginRight="40dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2.25dp"
                            android:src="@drawable/ic_arrow_account"/>
                </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            <LinearLayout
                    android:id="@+id/btnAccountInfoEmail"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/account_button_3"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="2dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <TextView
                            android:text="Email"
                            android:fontFamily="@font/lato_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="19dp"
                            android:textColor="@color/black"/>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_alignParentEnd="true"
                                  android:orientation="horizontal">
                <TextView
                        android:id="@+id/secondTextView"
                        android:fontFamily="@font/lato_regular"
                        android:text="tritran5789@gmail.com"
                        android:textSize="19dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_width="252dp"
                        android:layout_marginRight="40dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2.25dp"
                        android:src="@drawable/ic_arrow_account"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/btnAccountInfoPhoneNum"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/account_button_3"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="2dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <TextView
                            android:text="Số điện thoại"
                            android:fontFamily="@font/lato_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="19dp"
                            android:textColor="@color/black"/>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_alignParentEnd="true"
                                  android:orientation="horizontal">
                <TextView
                        android:id="@+id/tvAccountInfoPhoneNum"
                        android:fontFamily="@font/lato_regular"
                        android:text="0857350234"
                        android:textSize="19dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_width="188dp"
                        android:layout_marginRight="40dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2.25dp"
                        android:src="@drawable/ic_arrow_account"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

                <LinearLayout
                        android:id="@+id/btnAccountInfoDOB"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/account_button_3"
                        style="@android:style/Widget.Button"
                        android:layout_marginTop="2dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView
                                android:text="Ngày sinh"
                                android:fontFamily="@font/lato_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="19dp"
                                android:textColor="@color/black"/>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:layout_alignParentEnd="true"
                                      android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tvAccountInfoDOB"
                            android:fontFamily="@font/lato_regular"
                            android:text="15/10/2002"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:layout_width="215dp"
                            android:layout_marginRight="40dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2.25dp"
                            android:src="@drawable/ic_arrow_account"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/btnAccountInfoGender"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/account_button_2"
                        style="@android:style/Widget.Button"
                        android:layout_marginTop="2dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView
                                android:text="Giới tính"
                                android:fontFamily="@font/lato_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8.5dp"
                                android:layout_marginRight="10dp"
                                android:textSize="19dp"
                                android:textColor="@color/black"/>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:layout_alignParentEnd="true"
                                      android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tvAccountInfoGender"
                            android:fontFamily="@font/lato_regular"
                            android:text="Khác"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:layout_width="230dp"
                            android:layout_marginRight="40dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2.25dp"
                            android:src="@drawable/ic_arrow_account"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/btnAccountInfoLocation"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/account_button_1"
                        style="@android:style/Widget.Button"
                        android:layout_marginTop="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="9dp"
                                android:backgroundTint="@color/btn_blue"
                                android:src="@drawable/ic_location"/>
                        <TextView
                                android:fontFamily="@font/lato_regular"
                                android:text="Địa chỉ"
                                android:textSize="19dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:textAlignment="textStart"
                                android:layout_width="231dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="84.5dp"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="wrap_content"
                                          android:layout_height="match_parent"
                                          android:layout_alignParentEnd="true"
                                          android:orientation="horizontal">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:layout_marginEnd="2.25dp"
                                android:src="@drawable/ic_arrow_account"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/tvAccountInfoLocation"
                            android:fontFamily="@font/lato_regular"
                            android:text="KTX khu A, phường Linh Trung, Tp. Thủ Đức, Tp.Hồ Chí Minh"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            android:textAlignment="textStart"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="8dp"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/btnAccountInfoBankAccount"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/account_button_2"
                        style="@android:style/Widget.Button"
                        android:layout_marginTop="2dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:fontFamily="@font/lato_regular"
                                  android:layout_alignParentLeft="true"
                                  android:text="Tài khoản ngân hàng"
                                  android:textAlignment="textStart"
                                  android:textSize="19dp"
                                  android:textColor="@color/black"
                                  android:layout_marginLeft="10dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginEnd="2.25dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_arrow_account"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/btnAccountInfoPasswordChange"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/account_button_1"
                        style="@android:style/Widget.Button"
                        android:layout_marginTop="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_alignParentLeft="true"
                                  android:text="Đổi mật khẩu"
                                  android:fontFamily="@font/lato_regular"
                                  android:textAlignment="textStart"
                                  android:textSize="19dp"
                                  android:textColor="@color/black"
                                  android:layout_marginLeft="10dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="2.25dp"
                            android:src="@drawable/ic_arrow_account"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/btnAccountInfoLinkSocial"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/account_button_2"
                        style="@android:style/Widget.Button"
                        android:layout_marginTop="2dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="348dp"
                                  android:layout_height="match_parent"
                                  android:layout_alignParentLeft="true"
                                  android:text="Liên kết mạng xã hội"
                                  android:fontFamily="@font/lato_regular"
                                  android:textAlignment="textStart"
                                  android:textSize="19dp"
                                  android:textColor="@color/black"
                                  android:layout_marginLeft="10dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_marginEnd="2.25dp"
                            android:src="@drawable/ic_arrow_account"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        </ScrollView>

</FrameLayout>
