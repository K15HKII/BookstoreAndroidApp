<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".account_info_view">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAccountInfo"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0">
            <android.widget.Button
                    android:id="@+id/btnAccountInfoBackward"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:background="@drawable/backward_icon"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="409dp"
                android:layout_height="673dp"
                android:background="@drawable/home_backgroup"
                app:layout_constraintTop_toBottomOf="@+id/toolbarAccountInfo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <ScrollView
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <android.widget.Button
                        android:id="@+id/btnAccountInfoUserName"
                        android:text="TÃªn"
                        android:textSize="19dp"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/account_arrow_icon"
                        android:background="@drawable/account_button_1">
                </android.widget.Button>
            </ScrollView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
