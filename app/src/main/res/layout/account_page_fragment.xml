<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel"
                  type="k15hkii.se114.bookstore.ui.mainscreen.page.accountpage.AccountPageViewModel"/>
    </data>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/home_background"
        android:layout_height="match_parent"
        tools:context=".ui.mainscreen.page.accountpage.AccountPage">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewAccountPageUserImage"
                android:layout_width="75dp"
                   android:layout_height="75dp"
                   android:src="@drawable/login_shark_img"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/tvAccountPageUserName"
                    android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/lato_bold"
                      android:text="Trần Hữu Trí"
                      android:textStyle="bold"
                      android:textSize="30dp"
                      android:layout_marginTop="10dp"
                      android:textColor="@color/btn_blue"/>

            <TextView
                    android:id="@+id/tvAccountPageEmail"
                    android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/lato_regular"
                      android:text="20520327@gm.uit.edu.vn"
                      android:textSize="16dp"
                      android:textStyle="normal"
                      android:textColor="@color/btn_blue"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:orientation="vertical">
        <android.widget.Button
                android:id="@+id/btnAccountInfomation"
                android:onClick="@{()-> viewModel.onAccountInfoClick()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:padding="20dp"
                android:textSize="16.5dp"
                android:background="@drawable/account_button_1"
                android:text="Thông tin cá nhân"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_account_person"
                android:drawableEnd="@drawable/ic_arrow_account"/>
        <android.widget.Button
                android:id="@+id/btnAccountVoucher"
                android:onClick="@{()-> viewModel.onVoucherClick()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textFontWeight="500"
                android:fontFamily="@font/lato_regular"
                android:textSize="16.5dp"
                android:textAllCaps="false"
                android:background="@drawable/account_button_3"
                android:text="Voucher"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:drawableStart="@drawable/ic_voucher"
                android:drawableEnd="@drawable/ic_arrow_account"/>
        <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/lato_regular"
                android:textSize="16.5dp"
                android:textAllCaps="false"
                android:background="@drawable/account_button_2"
                android:text="Thông tin cá nhân"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_account_person"
                android:drawableEnd="@drawable/ic_arrow_account"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="15dp">
        <android.widget.Button
                android:id="@+id/btnAccountSetting"
                android:onClick="@{()-> viewModel.onSettingClick()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:padding="20dp"
                android:textSize="16.5dp"
                android:background="@drawable/account_button_1"
                android:text="Cài đặt"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_setting_account"
                android:drawableEnd="@drawable/ic_arrow_account"/>
        <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_button_2"
                android:padding="20dp"
                android:fontFamily="@font/lato_regular"
                android:textSize="16.5dp"
                android:text="Thông tin cá nhân"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/ic_account_person"
                android:drawableEnd="@drawable/ic_arrow_account"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="15dp">

        <android.widget.Button
                android:id="@+id/btnAccountHelpCenter"
                android:onClick="@{()-> viewModel.onHelpCenterClick()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:padding="20dp"
                android:textSize="16.5dp"
                android:background="@drawable/account_button_1"
                android:text="Hỗ trợ"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_help_account"
                android:drawableEnd="@drawable/ic_arrow_account"/>
        <RelativeLayout
                android:id="@+id/btnAccountLogout"
                android:onClick="@{()-> viewModel.onLogOutClick()}"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/account_button_2">
            <android.widget.Button
                    android:layout_width="120dp"
                    android:layout_height="55dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="16.5dp"
                    android:textStyle="normal"
                    android:background="@null"
                    android:text="Đăng xuất"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="@color/red_orange"
                    android:drawableLeft="@drawable/ic_signout"
                    android:layout_marginTop="2dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</layout>
