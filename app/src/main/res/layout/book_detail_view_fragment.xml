<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="BookDetailPageViewModel"
                  type="k15hkii.se114.bookstore.views.bookdetailscreen.BookDetailPageViewModel"/>
    </data>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.bookdetailscreen.BookDetailPage">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:theme="?attr/actionBarTheme"
                    android:minHeight="?attr/actionBarSize"
                    android:id="@+id/toolbarSettingPage">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <android.widget.Button
                                android:id="@+id/btnOrderPageBackward"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleX="0.55"
                                android:scaleY="0.55"
                                android:background="@drawable/ic_backward"/>

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <ScrollView
                    android:background="@drawable/home_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="3dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                            android:id="@+id/imageViewDeltailBookImage"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@drawable/dac_nhan_tam_book"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/tvDeltailBookTiltleOfBook"
                                    android:fontFamily="@font/lato_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Sách Đắc Nhân Tâm"/>
                            <ToggleButton
                                    android:id="@+id/btnDeltailBookHeart"
                                    android:layout_width="61dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="5dp"
                                    android:scaleX="0.5"
                                    android:scaleY="0.9"
                                    android:textOn=""
                                    android:textOff=""
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/favorite_btn_selector"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/tvDeltailBookPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="120.000đ"
                            android:textStyle="bold"
                            android:textColor="@color/red_orange"
                            android:textSize="29dp"/>
                    <RatingBar
                            android:id="@+id/rbDeltailBookRatingView"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="0.8"
                            android:scaleY="0.8"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số lượng hàng còn:"
                            android:fontFamily="@font/lato_bold"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/tvDeltailBookBookLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="18dp"
                            android:textColor="@color/red_orange"
                            android:text="2"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="Mô tả"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/tvDeltailBookDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="Blablabla"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Đánh giá"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvDeltailBookCommentList"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scrollbars="none"
                        android:background="@drawable/detail_book_shape"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">
                <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:scaleY="0.35"
                            android:scaleX="0.25"
                            android:background="@drawable/ic_add_shopping_cart"/>
                    <android.widget.Button
                            android:id="@+id/btnDeltailBookBuyNow"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:layout_alignParentEnd="true"
                            android:text="Mua ngay"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:background="@drawable/confirm_order_btn"/>
                </RelativeLayout>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>

</FrameLayout>
</layout>
