<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.mainscreen.page.FavoritePage">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_background"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/searchbox_shape"
                    android:orientation="horizontal">
                <EditText
                        android:id="@+id/etFavoriteSearchBox"
                        android:fontFamily="@font/lato_regular"
                        android:drawableStart="@drawable/ic_search"
                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="10dp"
                        android:hint="   Tìm kiếm"
                        android:background="@drawable/edit_text_background"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"/>
                <android.widget.Button
                        android:id="@+id/etFavoriteFilterbox"
                        android:layout_marginRight="10dp"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:background="@drawable/ic_filter"/>
            </LinearLayout>

                <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
            <android.widget.Button
                    android:id="@+id/btnFavoriteNotification"
                    android:scaleX="0.63"
                    android:scaleY="0.65"
                    android:backgroundTint="@color/btn_blue"
                    android:background="@drawable/notification_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            <android.widget.Button
                    android:id="@+id/btnFavoriteShoppingCart"
                    android:scaleX="0.58"
                    android:scaleY="0.58"
                    android:backgroundTint="@color/btn_blue"
                    android:background="@drawable/ic_shopping"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="505dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:fontFamily="@font/lato_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="31sp"
                        android:text="Gần đây"
                        android:textColor="@color/black"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lvLoveRecentlyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:fontFamily="@font/lato_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="31sp"
                        android:text="Tất cả"
                        android:textColor="@color/black"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lvLoveAllBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
