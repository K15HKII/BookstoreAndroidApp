<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background"
        tools:context=".views.mainscreen.page.HomePage" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_background"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/searchbox_shape"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tvHomeSearchBox"
                            android:fontFamily="@font/lato_regular"
                            android:drawableStart="@drawable/ic_search"
                            android:layout_marginLeft="5dp"
                            android:textSize="16dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="10dp"
                            android:text="   Tìm kiếm"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"/>
                    <android.widget.Button
                            android:id="@+id/etHomeFilterbox"
                            android:layout_marginRight="10dp"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:background="@drawable/ic_filter"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <android.widget.Button
                            android:id="@+id/btnHomeNotification"
                            android:scaleX="0.63"
                            android:scaleY="0.65"
                            android:backgroundTint="@color/btn_blue"
                            android:background="@drawable/notification_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <android.widget.Button
                            android:id="@+id/btnHomeShoppingCart"
                            android:scaleX="0.58"
                            android:scaleY="0.58"
                            android:backgroundTint="@color/btn_blue"
                            android:background="@drawable/ic_shopping"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textSize="33sp"
            android:text="Kho Sách"
            android:textColor="@color/black"/>
    <!--Danh mục cái navigation item-->
    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:scrollbars="none"
            android:layout_height="50dp">

            <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipgrpHomeChipNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:singleSelection="true">
                    <com.google.android.material.chip.Chip
                            android:id="@+id/chipHomeAllTopics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:checkable="true"
                            android:checked="true"
                            android:scaleY="1"
                            android:scaleX="1"
                            app:chipIconSize="30dp"
                            app:iconStartPadding="17dp"
                            app:checkedIconVisible="false"
                            app:chipIconTint="@color/text_selector"
                            app:chipBackgroundColor="@color/chip_selector"
                            app:chipIcon="@drawable/ic_home_selected"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/chipHomeAllBooks"
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:clickable="true"
                    android:text="Tất cả"
                    android:checkable="true"
                    app:checkedIconVisible="false"
                    android:textColor="@color/text_selector"
                    app:chipBackgroundColor="@color/chip_selector"/>
                <com.google.android.material.chip.Chip
                        android:id="@+id/chipHomePopularBooks"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:clickable="true"
                        android:text="Phổ biến"
                        android:checkable="true"
                        app:iconStartPadding="15dp"
                        app:checkedIconVisible="false"
                        android:textColor="@color/text_selector"
                        app:chipBackgroundColor="@color/chip_selector"/>
                <com.google.android.material.chip.Chip
                        android:id="@+id/chipHomeFamiliarBooks"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:clickable="true"
                        android:text="Gần đây"
                        android:checkable="true"
                        app:iconStartPadding="15dp"
                        app:checkedIconVisible="false"
                        android:textColor="@color/text_selector"
                        app:chipBackgroundColor="@color/chip_selector"/>
                <com.google.android.material.chip.Chip
                        android:id="@+id/chipHomeForYouBooks"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:clickable="true"
                        android:text="Dành cho bạn"
                        android:checkable="true"
                        app:iconStartPadding="15dp"
                        app:checkedIconVisible="false"
                        android:textColor="@color/text_selector"
                        app:chipBackgroundColor="@color/chip_selector"/>

            </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>
        <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:name="k15hkii.se114.bookstore.views.mainscreen.HomeScreen.HomeChipNavigation.AllTopicPage"
                android:id="@+id/fragmentContainerHomeView"/>

    </LinearLayout>

</LinearLayout>
