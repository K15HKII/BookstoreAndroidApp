<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="IntroThirdPageViewModel"
                  type="k15hkii.se114.bookstore.views.intro.thirdpage.IntroThirdPageViewModel"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.intro.thirdpage.IntroThirdPage">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_shark_img"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.075" android:id="@+id/imageView5"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên App"
            android:gravity="center"
            android:textSize="35dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/btn_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/textView3"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/intro_card_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="300dp" app:layout_constraintTop_toBottomOf="@+id/textView3">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tick_icon"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.08"
                android:id="@+id/imageView6"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="24dp"
                  android:gravity="center"
                  android:fontFamily="@font/lato_bold"
                  android:textColor="#FFFFFF"
                  android:text="Đặc điểm gì nổi bật"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/imageView6" tools:layout_editor_absoluteX="0dp"
                  app:layout_constraintVertical_bias="0.105" android:id="@+id/textView4"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Bla bla bla"
                  android:textColor="#FFFFFF"
                  android:textSize="15dp"
                  android:fontFamily="@font/lato_regular"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView4" tools:layout_editor_absoluteX="0dp"
                  app:layout_constraintVertical_bias="0.067" android:id="@+id/textView5"/>
        <android.widget.Button
                android:id="@+id/btnIntroPage3"
                android:onClick="@{()-> IntroThirdPageViewModel.openFinalPage()}"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Tiếp tục"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/btn_blue"
                android:background="@drawable/btn_intro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.493" app:layout_constraintVertical_bias="0.422"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="2/3"
                  android:textColor="#FFFFFF"
                  android:textSize="15dp"
                  android:fontFamily="@font/lato_regular"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/btnIntroPage3"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
