<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="LanguageSettingViewModel"
                  type="k15hkii.se114.bookstore.ui.accountscreen.settingpage.languagesetting.LanguageSettingViewModel"/>
    </data>
<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.accountscreen.settingpage.languagesetting.LanguageSetting">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarSettingPage">
        <android.widget.Button
                android:id="@+id/btnHelpCenterBackward"
                android:onClick="@{()-> LanguageSettingViewModel.onBackWardClick()}"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleX="0.55"
                android:scaleY="0.55"
                android:background="@drawable/ic_backward"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold"
                android:text="Ngôn ngữ"
                android:textColor="@color/black"
                android:textSize="26dp"/>

    </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/new_background_color"
                    android:padding="20dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginBottom="20dp"
                          android:fontFamily="@font/lato_regular"
                          android:text="Chọn ngôn ngữ cho ứng dụng của bạn"
                          android:textSize="15dp"
                          android:textColor="#636363"/>
                <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content">
                    <android.widget.RadioButton
                            android:id="@+id/radbtnLanguageSettingVietNam"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/account_button_1"
                            android:padding="15dp"
                            android:checked="true"
                            android:textSize="20dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="Tiếng Việt"
                            android:layout_width="match_parent" android:layout_height="wrap_content"/>

                    <android.widget.RadioButton
                            android:id="@+id/radbtnLanguageSettingEnglish"
                            android:background="@drawable/account_button_2"
                            android:padding="15dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="Tiếng Anh"
                            android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </RadioGroup>
            <android.widget.Button
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_width="120dp"
                                   android:layout_height="45dp"
                                   android:background="@drawable/new_btn_sky_small"
                                   android:textSize="16dp"
                                   android:textColor="@color/white"
                                   android:text="Xác nhận"
                                   android:textAllCaps="false"/>
            </LinearLayout>
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>
