<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="LanguageSettingViewModel"
                  type="k15hkii.se114.bookstore.ui.accountscreen.settingpage.languagesetting.LanguageSettingViewModel"/>
    </data>
<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.accountscreen.settingpage.languagesetting.LanguageSetting">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/home_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/home_background"
                  android:orientation="vertical" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarSettingPage">
        <android.widget.Button
                android:id="@+id/btnHelpCenterBackward"
                android:onClick="@{()-> LanguageSettingViewModel.onBackWardClick()}"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleX="0.55"
                android:scaleY="0.55"
                android:background="@drawable/ic_backward"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold"
                android:text="Ngôn ngữ"
                android:textColor="@color/black"
                android:textSize="26dp"/>

    </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_background"
                    android:padding="20dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:fontFamily="@font/lato_regular"
                          android:text="Chọn ngôn ngữ cho ứng dụng của bạn"
                          android:textSize="15dp"
                          android:textColor="#636363"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="15dp"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp"
                              android:paddingRight="5dp"
                              android:paddingLeft="15dp"
                              android:background="@drawable/account_button_1">
                    <android.widget.RadioButton
                            android:id="@+id/radbtnLanguageSettingVietNam"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:shadowColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textAlignment="textStart"
                            android:textAllCaps="false"
                            android:textSize="18dp"
                            android:text="Tiếng Việt"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="1dp"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp"
                              android:paddingRight="5dp"
                              android:paddingLeft="15dp"
                              android:background="@drawable/account_button_2">
                    <android.widget.RadioButton
                            android:id="@+id/radbtnLanguageSettingEnglish"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <android.widget.Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:shadowColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textAlignment="textStart"
                            android:textAllCaps="false"
                            android:textSize="18dp"
                            android:text="Tiếng Anh"/>
                </LinearLayout>

            <android.widget.Button
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_width="120dp"
                                   android:layout_height="45dp"
                                   android:background="@drawable/btn_forgotpassword"
                                   android:textSize="16dp"
                                   android:textColor="@color/white"
                                   android:text="Xác nhận"
                                   android:textAllCaps="false"/>
            </LinearLayout>
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>
