<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="k15hkii.se114.bookstore.ui.notificationnews.NotificationOrderViewModel" />
    </data>
    <!--TODO: thÃªm ViewModel-->
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/listview_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="120dp"
                image="@{viewModel.image}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/imageView11" />

            <TextView
                android:text="@{viewModel.notificationTitle}"
                android:fontFamily="@font/lato_bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintHorizontal_bias="0.03"
                android:id="@+id/textView10" />

            <TextView
                android:fontFamily="@font/lato_regular"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.notificationContent}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                android:layout_marginTop="5dp"
                app:layout_constraintHorizontal_bias="0.032" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>
