<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel"
                  type="k15hkii.se114.bookstore.ui.notificationnews.NotificationOrderViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:padding="20dp"
                  android:background="@drawable/listview_shape"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tvNotificationTitle"
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng #01 của bạn đã được xác nhận"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            <android.widget.Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="10dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:background="@drawable/ic_arrow_forward"/>
        </LinearLayout>
        <TextView
                android:id="@+id/tvNotificationDescription"
                android:fontFamily="@font/lato_regular"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="Mô tả bla bla"
                android:textColor="@color/black"
                android:textSize="18dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvNotificaitonOrderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                <TextView
                        android:id="@+id/tvNotificationItemsNote"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Note"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">
                    <TextView
                            android:text="Thành tiền: "
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/red_orange"
                            android:textSize="19dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tvNotificationItemsPrice"
                            android:fontFamily="@font/lato_regular"
                            android:text="120.000đ"
                            android:textColor="@color/red_orange"
                            android:textSize="19dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</layout>
