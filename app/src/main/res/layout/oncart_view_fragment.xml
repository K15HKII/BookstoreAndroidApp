<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="k15hkii.se114.bookstore.ui.oncartscreen.OncartViewViewModel"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/new_background_color"
            tools:context=".ui.oncartscreen.OncartViewPage">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbarSettingPage">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <android.widget.Button
                        android:id="@+id/btnOncartViewBackward"
                        android:onClick="@{()-> viewModel.onBackWardClick()}"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleX="0.55"
                        android:scaleY="0.55"
                        android:background="@drawable/ic_backward"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="Giỏ hàng"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lvOnCartViewListItems"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                source="@{viewModel.items}"/>
    </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="13dp"
                        android:gravity="bottom"
                        android:background="@drawable/oncart_bottom_shape"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/linearLayout2">
                        <CheckBox
                                android:id="@+id/cbOnCartViewPickAll"
                                android:checked="@={viewModel.SelectAll}"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black"
                                android:text="Chọn tất cả"
                                android:textSize="12dp"
                                android:backgroundTint="@color/btn_blue"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="Tổng tiền  "
                                    android:textSize="21dp"
                                    android:textColor="@color/black"/>
                            <TextView
                                    android:id="@+id/tvOnCartViewPriceOfAllBooks"
                                    android:fontFamily="@font/lato_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{String.valueOf(viewModel.totalPrice)}"
                                    android:textSize="21dp"
                                    android:textColor="@color/red_orange"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOnCartViewConfirmOrderOncart"
                            android:fontFamily="@font/lato_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:text="Mua hàng"
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            app:icon="@drawable/ic_shopping"
                            app:iconGravity="textStart"
                            app:backgroundTint="#21A1E9"
                            android:drawableTint="@color/white"
                            android:background="@drawable/new_btn_sky_medium"
                            android:onClick="@{()->viewModel.openOrderPage()}" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                            app:layout_constraintHorizontal_bias="0.893" app:layout_constraintVertical_bias="0.517"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    </FrameLayout>

</layout>
