<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrderInfoScreen.OrderInfoPage">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_background"
            android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbarSettingPage">
            <android.widget.Button
                    android:id="@+id/btnOrderPageBackward"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:background="@drawable/ic_backward"/>

            <TextView
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:textStyle="bold"
                    android:text="Hình thức thanh toán"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginTop="0dp"
                      android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/btnOrderPageLocation"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_1"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_location"/>
                    <TextView
                            android:fontFamily="@font/lato_bold"
                            android:text="Địa chỉ"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_width="231dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="84.5dp"/>
                    </LinearLayout>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2.25dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_arrow_account"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                        android:id="@+id/tvOrderPageAddressDetail"
                        android:fontFamily="@font/lato_regular"
                        android:text="KTX khu A, phường Linh Trung, Tp. Thủ Đức, Tp.Hồ Chí Minh"
                        android:textSize="19dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_3"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:backgroundTint="@color/black"
                            android:src="@drawable/ic_shopping"/>
                    <TextView
                            android:text="Đơn hàng"
                            android:fontFamily="@font/lato_bold"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_width="231dp"
                            android:layout_marginLeft="3dp"/>
                </LinearLayout>
                <ListView
                        android:id="@+id/lvOrderPageListBooks"
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_height="208dp"
                        android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/btnOrderPageVoucher"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_3"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_voucher"/>
                            <TextView
                                    android:text="Voucher"
                                    android:fontFamily="@font/lato_bold"
                                    android:textStyle="bold"
                                    android:textSize="19dp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textStart"
                                    android:layout_width="220dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="84.5dp"/>
                        </LinearLayout>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginEnd="2.25dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_arrow_account"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                        android:id="@+id/tvOrderPageVoucher"
                        android:fontFamily="@font/lato_regular"
                        android:text="%25 giảm giá"
                        android:textSize="19dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/btnOrderPagePaymentMethod"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_3"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_credit"/>
                        <TextView
                                android:text="Hình thức thanh toán"
                                android:fontFamily="@font/lato_bold"
                                android:textStyle="bold"
                                android:textSize="19dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:textAlignment="textStart"
                                android:layout_width="220dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="84.5dp"/>
                    </LinearLayout>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginEnd="2.25dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_arrow_account"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                        android:id="@+id/tvOrderPagePaymentMethod"
                        android:fontFamily="@font/lato_regular"
                        android:text="Thanh toán khi nhận hàng"
                        android:textSize="19dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_2"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="Tổng tiền hàng"
                            android:textAlignment="textStart"/>
                    <TextView
                            android:id="@+id/tvOrderPageTotal"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:text="240.000đ"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="Phí vận chuyển"
                            android:textAlignment="textStart"/>
                    <TextView
                            android:id="@+id/tvOrderPageShipmentPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:text="240.000đ"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="Giảm giá"
                            android:textAlignment="textStart"/>
                    <TextView
                            android:id="@+id/tvOrderPageDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:text="-60.000đ"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black"
                            android:text="Tổng tiền"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"/>
                    <TextView
                            android:id="@+id/tvOrderPageTotalMoneyPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:text="200.000đ"/>
                </LinearLayout>

            </LinearLayout>
            <android.widget.Button
                    android:id="@+id/btnOrderPageConfirmOrder"
                    android:fontFamily="@font/lato_bold"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/round_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_shopping_white"
                    android:text="Đặt hàng"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
