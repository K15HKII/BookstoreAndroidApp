<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="k15hkii.se114.bookstore.ui.orderinfoscreen.PaymentMethodViewModel"/>
    </data>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/new_background_color"
        tools:context=".ui.orderinfoscreen.PaymentMethodPage">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarSettingPage">
        <android.widget.Button
                android:id="@+id/btnPaymentMethodBackward"
                android:onClick="@{()-> viewModel.onBackWardClick()}"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleX="0.55"
                android:scaleY="0.55"
                android:background="@drawable/ic_backward"/>

        <TextView
                android:fontFamily="@font/lato_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:text="Hình thức thanh toán"
                android:textColor="@color/black"
                android:textSize="24dp"/>
    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:orientation="vertical"
                android:padding="15dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/account_button_1"
                    android:orientation="horizontal">
                <ToggleButton
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:scaleX="0.7"
                        android:scaleY="0.45"
                        android:background="@drawable/radio_selector"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                        android:fontFamily="@font/lato_bold"
                        android:layout_width="275dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Thẻ ATM"
                        android:textSize="17dp"
                        android:textColor="@color/btn_blue" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/account_button_2"
                    android:orientation="horizontal">
                <ToggleButton
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:scaleX="0.7"
                        android:scaleY="0.45"
                        android:background="@drawable/radio_selector"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                        android:id="@+id/btnAddressChoiceOtherAddress"
                        android:fontFamily="@font/lato_bold"
                        android:layout_width="275dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Tiền mặt"
                        android:textSize="17dp"
                        android:textColor="@color/btn_blue" />
            </LinearLayout>
            <android.widget.Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginTop="340dp"
                    android:text="Chọn"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:background="@drawable/new_btn_sky_large"
                    android:onClick="@{()-> viewModel.AcceptPayment()}"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
</layout>
