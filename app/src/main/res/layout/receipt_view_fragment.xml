<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".receipt_view">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_backgroup"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
            <EditText
                    android:id="@+id/etHomeSearch"
                    android:drawableStart="@drawable/search_icon"
                    android:drawableEnd="@drawable/filter_icon"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="15dp"
                    android:hint="   Tìm kiếm"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"/>
            <android.widget.Button
                    android:id="@+id/btn_Home_Notification"
                    android:scaleX="0.62"
                    android:scaleY="0.7"
                    android:backgroundTint="@color/btn_blue"
                    android:background="@drawable/notification_icon"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"/>
            <android.widget.Button
                    android:id="@+id/btn_Home_Shopping"
                    android:scaleX="0.62"
                    android:scaleY="0.7"
                    android:backgroundTint="@color/btn_blue"
                    android:background="@drawable/shopping_icon"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
