<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/gradient_background"
        tools:context=".RegisterScreen.Register">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
<!--        Hình ảnh logo-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <android.widget.Button
                            android:id="@+id/btnRegisterBackward"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:background="@drawable/ic_backward"/>

                        <View
                                android:layout_width="220dp"
                                android:layout_height="150dp"
                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:background="@drawable/image1" android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/lato_bold"
                          android:text="Đăng kí"
                          android:textAlignment="center"
                          android:textSize="35sp"
                          android:textStyle="bold"
                          android:textColor="@color/btn_blue"
                          android:gravity="center"
                          android:backgroundTint="@color/black"
                          android:textAppearance="@style/Dang_ki"/>
            </LinearLayout>

            <!--            Thông tin đăng nhập-->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:orientation="horizontal">
                <EditText
                        android:id="@+id/etRegisterUser"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textSize="18dp"
                        android:background="@drawable/edit_text_background"
                        android:inputType="text"
                        android:hint="Tên đăng nhập"/>
                <android.widget.Spinner
                        android:id="@+id/spRegisterGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:popupBackground="@drawable/spinner_shape"
                        android:padding="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="16dp"
                        android:background="@drawable/edit_text_background"
                        android:dropDownSelector="@drawable/dropdown_selector"
                        android:inputType="text"
                        android:hint="giới tính"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="10dp">

                    <EditText
                            android:id="@+id/etRegisterDOB"
                            android:fontFamily="@font/lato_regular"
                            android:layout_width="188dp"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:textSize="18dp"
                            android:background="@drawable/edit_text_background"
                            android:inputType="date"
                            android:hint="Ngày sinh"/>

                <EditText
                        android:id="@+id/etRegisterPhoneNum"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edit_text_background"
                        android:inputType="number"
                        android:hint="Số điện thoại"/>
            </LinearLayout>
            <EditText
                    android:id="@+id/etRegisterEmail"
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textSize="18dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="text"
                    android:hint="Email"/>
            <EditText
                    android:id="@+id/etRegisterPassword"
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textSize="18dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/ic_visibility_off_black"
                    android:longClickable="false"
                    android:hint="Mật khẩu"/>
            <EditText
                    android:id="@+id/etRegisterPasswordConfirm"
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textSize="18dp"
                    android:background="@drawable/edit_text_background"
                    android:drawableRight="@drawable/ic_visibility_off_black"
                    android:longClickable="false"
                    android:inputType="textPassword"
                    android:hint="Nhập lại mật khẩu"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <!--Kiểm tra đã đồng ý điều khoản hay chưa-->
                <CheckBox
                        android:id="@+id/cbRegisterCheckPolicy"
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="#001C44"
                        android:textSize="15dp"
                        android:clickable="true"
                        android:text="Tôi chấp nhận với điều khoản và chính sách của appname."/>

            </LinearLayout>

            <!--            Đăng kí button-->
            <android.widget.Button
                    android:id="@+id/btnRegisterRegister"
                    android:fontFamily="@font/lato_bold"
                    android:textAllCaps="false"
                    android:background="@drawable/round_btn"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:text="Đăng kí"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>
