<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="k15hkii.se114.bookstore.ui.mainscreen.rentscreen.menutab.detail.RentDetailBillViewModel"/>
    </data>

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background"
        tools:context=".ui.mainscreen.rentscreen.menutab.detail.RentDetailBill">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:theme="?attr/actionBarTheme"
                    android:minHeight="?attr/actionBarSize"
                    android:id="@+id/toolbarSettingPage">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.widget.Button
                            android:id="@+id/btnRentDetailBillBookBackward"
                            android:onClick="@{()-> viewModel.onBackWardClick()}"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleX="0.55"
                            android:scaleY="0.55"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/ic_backward"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/lato_bold"
                            android:textStyle="bold"
                            android:text="Thông tin thuê sách"
                            android:textColor="@color/black"
                            android:textSize="24dp" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="  Đơn thuê"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:drawableStart="@drawable/ic_shopping"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/imgRentDetailBillBook"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/dac_nhan_tam_book"
                            image="@{viewModel.bookImage}"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                    <TextView
                            android:id="@+id/tvRentDetailBillBookName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.bookName}"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imgRentDetailBillBook"
                            app:layout_constraintHorizontal_bias="0.167" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:id="@+id/tvRentDetailBillBookType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bìa cứng"
                            android:textColor="#636363"
                            android:layout_marginTop="9dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvRentDetailBillBookName" android:layout_marginStart="24dp"
                            app:layout_constraintStart_toEndOf="@+id/imgRentDetailBillBook"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.0" />
                    <TextView
                            android:id="@+id/tvRentDetailBillBookPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.bookRentPrice}"
                            android:textColor="@color/btn_blue"
                            app:layout_constraintStart_toEndOf="@+id/tvRentDetailBillBookType"
                            android:layout_marginStart="144dp"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.647"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:orientation="vertical">
                <!--            TODO: Thêm hạn trả icon-->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="  Hạn trả"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:drawableStart="@drawable/ic_date_book_return"/>
                <TextView
                        android:id="@+id/tvRentDetailBillDateReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="@{viewModel.expiredDate}"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/btnAddRentBookVoucher"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_3"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_voucher"/>
                            <TextView
                                    android:text="Voucher"
                                    android:fontFamily="@font/lato_bold"
                                    android:textStyle="bold"
                                    android:textSize="19dp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textStart"
                                    android:layout_width="220dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="84.5dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                        android:id="@+id/tvRentDetailBillVoucher"
                        android:fontFamily="@font/lato_regular"
                        android:text="Không có"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/btnAddRentBookPaymentMethod"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_3"
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_credit"/>
                            <TextView
                                    android:text="Hình thức thanh toán"
                                    android:fontFamily="@font/lato_bold"
                                    android:textStyle="bold"
                                    android:textSize="19dp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textStart"
                                    android:layout_width="220dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="84.5dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                        android:id="@+id/tvRentDetailBillPaymentMethod"
                        android:fontFamily="@font/lato_regular"
                        android:text="Thẻ ATM"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/account_button_2"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="Tiền thuê"
                            android:textAlignment="textStart"/>
                    <TextView
                            android:id="@+id/tvRentDetailBillTotal"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:text="240.000đ"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="Giảm giá"
                            android:textAlignment="textStart"/>
                    <TextView
                            android:id="@+id/tvRentDetailBillDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="15dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:text="-60.000đ"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black"
                            android:text="Tổng tiền"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"/>
                    <TextView
                            android:id="@+id/tvRentDetailBillTotalMoneyPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:text="@{viewModel.totalPrice}"/>
                </LinearLayout>
            </LinearLayout>

            <android.widget.Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()-> viewModel.onBackWardClick()}"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Quay lại"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/btn_blue"
                    android:textAllCaps="false"
                    android:background="@drawable/round_white_btn_med"
            />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
</layout>
