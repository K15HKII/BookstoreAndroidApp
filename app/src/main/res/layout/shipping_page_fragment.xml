<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="ShippingPageViewModel"
                  type="k15hkii.se114.bookstore.views.mainscreen.page.shippingpage.ShippingPageViewModel"/>
    </data>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.mainscreen.page.shippingpage.ShippingPage">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_background"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/searchbox_shape"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/etShipmentSearchBox"
                            android:onClick="@{()-> ShippingPageViewModel.onSearchBarClick()}"
                            android:fontFamily="@font/lato_regular"
                            android:drawableStart="@drawable/ic_search"
                            android:layout_marginLeft="5dp"
                            android:textSize="16dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="10dp"
                            android:text="   Tìm kiếm"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"/>
                    <android.widget.Button
                            android:id="@+id/etShipmentFilterbox"
                            android:onClick="@{()-> ShippingPageViewModel.onFilterDialog()}"
                            android:layout_marginRight="10dp"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:background="@drawable/ic_filter"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <android.widget.Button
                            android:id="@+id/btnShipmentNotification"
                            android:onClick="@{()-> ShippingPageViewModel.onNotificationClick()}"
                            android:scaleX="0.63"
                            android:scaleY="0.65"
                            android:backgroundTint="@color/btn_blue"
                            android:background="@drawable/notification_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <android.widget.Button
                            android:id="@+id/btnShipmentShoppingCart"
                            android:onClick="@{()-> ShippingPageViewModel.onOnCartClick()}"
                            android:scaleX="0.58"
                            android:scaleY="0.58"
                            android:backgroundTint="@color/btn_blue"
                            android:background="@drawable/ic_shopping"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabMenuReceiptNav"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/home_background"
                android:minHeight="?attr/actionBarSize"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabSelectedTextColor="@color/black"
                app:tabIndicatorColor="@color/black"/>
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpReceiptOrderView"
                android:layout_width="match_parent"
                android:layout_height="450dp"/>
    </LinearLayout>

</FrameLayout>
</layout>
